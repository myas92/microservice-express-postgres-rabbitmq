{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "out",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },

}
